<h1>Home Page</h1>

<% if current_user %>
  <p>
    Saved Phrases: <%= @phrase_count %>
  </p>
<% end %>

<% if @sentence %>
  <p>
    <%= @sentence %>
  </p>
<% end %>

<form method="post" action='/generate'>
  <div>
    <input type="submit" value="GENERATE!!!!!!!!">
  </div>
</form>

<% if current_user %>
  <form method="post" action='/save'>
    <div>
      <input type="submit" value="Save this phrase">
    </div>
  </form>

  <% if @field_blank %>
    <p>
      You can't save when the field is blank! Shame on you :(
    </p>
  <% end %>

  <a href="/your_collection"><button type="submit">Your Collection</button></a>

<% end %>

<a href="/collections"><button type="submit">All Collections</button></a>

