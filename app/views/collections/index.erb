<h1>All Collections</h1>

<table style="width:50%">
<% @collections.each do |collection| %>
      <tr>
        <td>
          <a href="/users/<%= collection.user_id %>/collection"><%= collection.title %></a> 
          <% unless current_user.has_upvoted_collection?(collection) %>
            <a href="/collection/<%= collection.id %>/upvote"> <button type="submit"><%= collection.upvotes.count %></button></a>
          <% else %>
            <button type="submit"><%= collection.upvotes.count %></button>
          <% end %>
        </td>
      </tr>
    <% end %>
</table>